<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:task="http://www.springframework.org/schema/task" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:property-placeholder
		ignore-resource-not-found="true"
		location="file:../conf/rss.mailer-conf.properties,
		classpath*:rss.mailer-conf.properties" />

	<!-- Spring Auto Scan Components -->
	<context:component-scan base-package="com.guilherme.miguel.rssmailer" />

	<!-- Enables Scheduling tasks -->
	<task:annotation-driven />

	<import resource="springMailConfiguration.xml" />

</beans>
